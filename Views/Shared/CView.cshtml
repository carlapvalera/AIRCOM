@if (ViewBag.page == 1)
{
    @foreach (ShipsDTO ship in ViewBag.ships)
    {
        <section class="dataToShow">
            <div style="display: flex;">
                <div>Matricula: @Html.DisplayFor(m=>ship.Plate)</div>
