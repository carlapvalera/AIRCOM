@{
    string Evaluation(int val)
    {
        string cal = "";
        for (int i = 0; i < val/2; i++)
            cal+="⭐";
        if(val%2==1)
            cal+="🌗";
        for (int i = 0; i < (10- val) / 2; i++)
            cal += "🌑";
        return cal;

    }
    string GetId(ServiceInstallationDTO service)
    {
        return service.Code + '\0' + service.InstallationID + '\0' + service.Name + '\0' + service.Price;
    }
}

