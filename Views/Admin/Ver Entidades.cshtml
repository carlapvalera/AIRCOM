                    <tr class="form-group">
                        <td>Jose Marti</td>
                        <td>Coordenadas</td>
                        <td>Direccion</td>
                    </tr>
                }
            </table>
        </center>
    </details>
    @*----------------------------------------*@
    <details>
        <center style="font-size:large;">
            <table>
                <tr class="form-group">
                    <th>Nombre</th>
                    <th>Descripción</th>
                </tr class="form-group">
                @foreach (var a in ViewBag.repairs)
                {
                    <tr>
                        <td>@a.Name</td>
                        <td>@a.Description</td>
                    </tr>
                }
            </table>
        </center>
    </details>
    @*----------------------------------------*@
    
</section>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}