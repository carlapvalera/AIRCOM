<header style="background:darkred;">
    AIRCOM ADMIN
</header>

<nav class="navegacion">
    <div>
        <form asp-action="Init">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <button name="pagina" value="3" class="pasive" type="submit"><h2>Administrar</h2></button>
        </form>
        <p style="color:white;">____</p>
        <form asp-action="ChangePage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input value="3" name="page" hidden />
