<section>
    <details>
        <summary>Ver Aeropuertos</summary>
        <center style="font-size:large;">
            <table>
                <tr class="form-group">
                    <th>Nombre</th>
                    <th>Coordenadas</th>
                    <th>Dirección</th>
                </tr>
                @foreach(var a in "aaaa")
